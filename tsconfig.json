{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "jsx": "react",
        "sourceMap": true,
        "declaration": false
    },
    "exclude": [
        "node_modules",
        "**/*.d.ts"
    ],
    "compileOnSave": true
}